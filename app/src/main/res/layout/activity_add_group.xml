<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.group.AddGroupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolbarTheme"
        android:popupTheme="@style/ToolbarPopupTheme" />

    <TextView
        android:id="@+id/addGroupTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_group"
        android:layout_below="@id/toolbar"
        android:textSize="24sp"
        android:fontFamily="@font/iran_yekan_bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:paddingVertical="8dp" />

    <EditText
        android:id="@+id/groupNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Group Name"
        android:hint="@string/enter_group_name"
        android:layout_below="@+id/addGroupTitleTextView"
        android:layout_margin="16dp"
        android:inputType="text"
        android:padding="12dp"
        android:textSize="16sp" />

    <Button
        android:id="@+id/addGroupButton"
        style="@style/PrimaryButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_group"
        android:layout_below="@id/groupNameEditText"
        android:layout_margin="16dp"
        android:padding="12dp"
        android:textSize="16sp" />

</RelativeLayout>
